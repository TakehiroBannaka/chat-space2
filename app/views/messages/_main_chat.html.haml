.main_chat
  .main_chat__header
    .main_chat__header__left-box
      .main_chat__header__left-box__current-title
        = @group.name
        .main_chat__header__left-box__member-list
          Member :
          - @group.users.each do |user|
            = user.name
          
    .main_chat__header__btnbox
      = link_to edit_group_path(@group) ,class: "btnbox__edit" do
        Edit
  .main_chat__messages
    = render @messages
    
      
  





  .main_chat__form
    .main_chat__form__new_message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "input_box__text", placeholder: 'type a message'
        .input_box
          = f.label :image, class: 'input_box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'input_box__image__file'     
        = f.submit 'Send', class: 'submit-btn'
      


  